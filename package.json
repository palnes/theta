{
  "name": "theta",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "libs/*"
  ],
  "packageManager": "yarn@4.5.3",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "turbo run start --ui=tui",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:ui": "turbo run test:ui",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "turbo run format",
    "clean": "turbo run clean",
    "dev": "turbo run dev --parallel",
    "dev:tokens": "turbo run dev --filter=@theta/tokens",
    "dev:web": "turbo run dev --filter=@theta/web",
    "dev:native": "turbo run dev --filter=@theta/native",
    "storybook": "turbo run storybook --parallel",
    "build-storybook": "turbo run build-storybook",
    "quality": "turbo run format typecheck test",
    "check": "turbo run lint typecheck test --parallel",
    "ci": "turbo run lint typecheck test build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "yarn build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.5",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "resolutions": {
    "@types/react-dom": "18.3.0",
    "@types/react": "18.3.0",
    "@vitejs/plugin-react": "4.5.2",
    "playwright": "1.49.0",
    "react-dom": "19.0.0",
    "react": "19.0.0",
    "typescript": "5.8.3",
    "vite": "7.0.0",
    "vitest": "3.2.4"
  }
}
