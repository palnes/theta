{
  "cmp": {
    "checkbox": {
      "size": {
        "$value": "{ref.dimension.20}"
      },
      "borderWidth": {
        "$value": "{ref.dimension.2}"
      },
      "borderRadius": {
        "$value": "{sys.radius.sm}"
      },
      "transitionDuration": {
        "$value": "{sys.duration.fast}"
      },
      "color": {
        "background": {
          "default": {
            "$value": "{ref.color.white}"
          },
          "hover": {
            "$value": "{sys.color.interaction.brand.subtle.hover}"
          },
          "active": {
            "$value": "{sys.color.interaction.brand.subtle.active}"
          },
          "selected": {
            "$value": "{sys.color.action.primary.default}"
          },
          "disabled": {
            "$value": "{sys.color.surface.disabled.default}"
          },
          "disabledSelected": {
            "$value": "{sys.color.action.primary.disabled}"
          }
        },
        "border": {
          "default": {
            "$value": "{sys.color.border.subtle}"
          },
          "hover": {
            "$value": "{sys.color.border.default}"
          },
          "disabled": {
            "$value": "{sys.color.border.disabled}"
          },
          "error": {
            "$value": "{sys.color.border.error}"
          }
        },
        "checkmark": {
          "default": {
            "$value": "{ref.color.white}"
          }
        }
      }
    }
  }
}
