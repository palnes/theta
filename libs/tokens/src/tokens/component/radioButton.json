{
  "cmp": {
    "radioButton": {
      "size": {
        "$value": "{sys.dimension.component.spacing.sm}"
      },
      "innerSize": {
        "$value": "{sys.dimension.component.spacing.xs}"
      },
      "borderWidth": {
        "$value": "{sys.border.width.thin}"
      },
      "borderRadius": {
        "$value": "{sys.radius.full}"
      },
      "transitionDuration": {
        "$value": "{sys.duration.fast}"
      },
      "color": {
        "background": {
          "default": {
            "$value": "{sys.color.surface.primary.inverse}"
          },
          "hover": {
            "$value": "{sys.color.interaction.brand.subtle.hover}"
          },
          "selected": {
            "$value": "{sys.color.action.primary.default}"
          },
          "disabled": {
            "$value": "{sys.color.surface.disabled.default}"
          }
        },
        "border": {
          "default": {
            "$value": "{sys.color.border.subtle}"
          },
          "hover": {
            "$value": "{sys.color.border.default}"
          },
          "disabled": {
            "$value": "{sys.color.border.disabled}"
          },
          "error": {
            "$value": "{sys.color.border.error}"
          }
        },
        "dot": {
          "default": {
            "$value": "{sys.color.text.inverse}"
          }
        }
      }
    }
  }
}
