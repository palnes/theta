{
  "cmp": {
    "input": {
      "height": {
        "small": {
          "$value": "{sys.dimension.component.height.small}"
        },
        "medium": {
          "$value": "{sys.dimension.component.height.medium}"
        },
        "large": {
          "$value": "{sys.dimension.component.height.large}"
        }
      },
      "paddingX": {
        "$value": "{sys.spacing.md}"
      },
      "borderWidth": {
        "$value": "{sys.border.width.thin}",
        "$description": "Border width for input field"
      },
      "borderStyle": {
        "$value": "{sys.border.style.default}",
        "$description": "Border style for input field"
      },
      "borderRadius": {
        "$value": "{sys.radius.sm}"
      },
      "typography": {
        "small": {
          "$value": "{sys.typography.body.sm}"
        },
        "medium": {
          "$value": "{sys.typography.body.md}"
        },
        "large": {
          "$value": "{sys.typography.body.lg}"
        }
      },
      "color": {
        "background": {
          "default": {
            "$value": "{sys.color.surface.input.default}"
          },
          "hover": {
            "$value": "{sys.color.surface.input.hover}"
          },
          "focus": {
            "$value": "{sys.color.surface.input.focus}"
          },
          "disabled": {
            "$value": "{sys.color.surface.input.disabled}"
          }
        },
        "border": {
          "default": {
            "$value": "{sys.color.border.default}"
          },
          "focus": {
            "$value": "{sys.color.border.focus}"
          },
          "error": {
            "$value": "{sys.color.border.error}"
          }
        },
        "text": {
          "default": {
            "$value": "{sys.color.text.primary}"
          },
          "placeholder": {
            "$value": "{sys.color.text.tertiary}"
          },
          "disabled": {
            "$value": "{sys.color.text.disabled}"
          }
        }
      }
    }
  }
}
