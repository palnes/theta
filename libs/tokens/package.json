{
  "name": "@theta/tokens",
  "version": "0.0.0",
  "type": "module",
  "description": "Design tokens for the Nordlys design system",
  "license": "UNLICENSED",
  "sideEffects": false,
  "main": "./dist/tokens.js",
  "types": "./dist/tokens.d.ts",
  "exports": {
    ".": {
      "types": "./dist/tokens.d.ts",
      "import": "./dist/tokens.js",
      "require": "./dist/tokens.js"
    },
    "./css": {
      "types": "./dist/css.d.ts",
      "import": "./dist/css/tokens.css"
    },
    "./css/themes": {
      "import": "./dist/css/themes.css"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "yarn build:tokens && yarn build:css-types",
    "build:tokens": "node build.js",
    "build:css-types": "node scripts/build-css-types.js",
    "dev": "yarn build:tokens --watch",
    "clean": "rm -rf dist",
    "lint": "biome lint .",
    "format": "biome check . --write",
    "typecheck": "tsc --noEmit -p tsconfig.typecheck.json",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@biomejs/biome": "*",
    "@storybook/addon-a11y": "*",
    "@storybook/addon-docs": "*",
    "@storybook/addon-onboarding": "*",
    "@storybook/react": "*",
    "@storybook/react-vite": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@vitejs/plugin-react": "*",
    "react": "*",
    "react-dom": "*",
    "remark-gfm": "^4.0.1",
    "remark-toc": "^9.0.0",
    "storybook": "*",
    "style-dictionary": "^5.0.0",
    "typescript": "*",
    "vite": "*"
  }
}
